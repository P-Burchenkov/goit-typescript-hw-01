{
  "compilerOptions": {  
    "target": "es2020",   
    "module": "ES2020",                                
    "rootDir": "./src", 
    "outDir": "./dist",
    "allowJs": false, 
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2021", "DOM"],    
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true  
  },
  "include": ["**/*.ts"]
}
